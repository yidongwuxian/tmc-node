{
  "name": "tmcnode",
  "version": "1.0.0",
  "description": "利用node+koa+mongoose搭建的后台服务，提供restful接口api",
  "main": "src/app.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development supervisor --harmony app.js",
    "pro": "cross-env NODE_ENV=production supervisor --harmony app.js",
    "local": "cross-env NODE_ENV=development pm2 restart app.js --update-env --node-args='--harmony' --name 'tmc-node'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=production pm2 start app.js --node-args='--harmony' --name 'tmc-node'",
    "stop": "cross-env NODE_ENV=production pm2 stop app.js --name 'tmc-node'",
    "restart": "cross-env NODE_ENV=production pm2 restart app.js --node-args='--harmony' --name 'tmc-node'"
  },
  "keywords": [
    "koa",
    "node",
    "mongodb"
  ],
  "author": "itshu",
  "license": "MIT",
  "dependencies": {
    "babel-preset-env": "^1.4.0",
    "babel-register": "^6.24.1",
    "bluebird": "^3.5.0",
    "cloudinary": "^1.8.0",
    "co": "^4.6.0",
    "cross-env": "^5.0.5",
    "hashmap": "^2.3.0",
    "ioredis": "^3.1.1",
    "jsonwebtoken": "^8.0.0",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-log4": "^2.2.1",
    "koa-logger": "^2.0.1",
    "koa-mount": "^3.0.0",
    "koa-nunjucks-promise": "^1.1.1",
    "koa-router": "^7.1.1",
    "koa-session2": "^2.2.4",
    "koa-static": "^4.0.1",
    "koa2-cors": "^2.0.3",
    "lodash": "^4.17.4",
    "mime": "^1.3.6",
    "moment": "^2.19.1",
    "mongoose": "^4.9.5",
    "mz": "^2.6.0",
    "node-fetch": "^1.7.3",
    "nodemailer": "^4.0.1",
    "nunjucks": "^3.0.1",
    "pm2": "^2.7.1",
    "qiniu": "^6.1.13",
